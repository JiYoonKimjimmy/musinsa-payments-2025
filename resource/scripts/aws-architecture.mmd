graph TB
    Internet[Internet]
    Route53[Route 53]
    
    subgraph VPC["VPC"]
        subgraph Public["Public Subnets"]
            ALB[Application Load Balancer]
        end
        
        subgraph Private["Private Subnets"]
            subgraph AZ1["Availability Zone 1"]
                ECS1[ECS Fargate<br/>Spring Boot]
            end
            
            subgraph AZ2["Availability Zone 2"]
                ECS2[ECS Fargate<br/>Spring Boot]
            end
            
            ElastiCache[ElastiCache<br/>Redis]
            
            subgraph Database["Database Layer"]
                RDS_Primary[(Aurora Primary)]
                RDS_Replica[(Aurora Replica)]
            end
        end
    end
    
    CloudWatch[CloudWatch<br/>Monitoring]
    ECR[ECR<br/>Container Registry]
    
    Internet --> Route53
    Route53 --> ALB
    ALB --> ECS1
    ALB --> ECS2
    ECS1 --> ElastiCache
    ECS2 --> ElastiCache
    ECS1 --> RDS_Primary
    ECS2 --> RDS_Primary
    RDS_Primary -.->|Replication| RDS_Replica
    
    ECS1 -.-> CloudWatch
    ECS2 -.-> CloudWatch
    ECR -.-> ECS1
    ECR -.-> ECS2
    
